<% if logged_in? %>

    <div class="row">
          <aside class="col-md-4">
            <section class="user_info"><%= render 'shared/user_info' %></section>
            <section class="tasks_form"><%= render 'shared/tasks_form' %></section>
          </aside>

          <div class="col-md-8">
            <h3>Tasks</h3>
            <%= render 'shared/feed' %>
          </div>
    </div>
    
<% else %>

<div class="center jumbotron">
  <h1>LiNote APP</h1>
  <h2>A test project by <a href="https://github.com/antonror/">Anton Semenichenko</a></h2>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

